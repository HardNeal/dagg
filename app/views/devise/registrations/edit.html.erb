<%= render "devise/shared/css" %>

<center>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <p>
    <b>
    <% flash.each do |key, value| %>
      <div class="alert alert-default" role="alert">
        <div ><%= value %></div>
      </div>
    <% end %>
    </b>
  </p>
</center>

<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
    <div class="login-form">
      <div class="sign-in-htm">
        
        <div class="group">
          <label for="user" class="label">Телефон</label>
          <a><%= f.text_field :phone_number, class: "input" %></input>
        </div>

        <div class="group">
          <label for="user" class="label">Почтовый адрес</label>
          <a><%= f.email_field :email, class: "input" %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </input>
        </div>
        <div class="group">
          <label for="pass" class="label">Новый пароль<br/>
          <a id="pass"><%= f.password_field :password, autocomplete: "off", class: "input" %>
          <br/>
        </div>

        <div class="group">
          <label for="pass" class="label">Повторить пароль<br/>
          <a id="pass"><%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
          <br/>
        </div>

        <div class="group">
          <label for="pass" class="label">Старый пароль<br/>
          <a id="pass"><%= f.password_field :current_password, autocomplete: "off", class: "input" %>
          <br/>
        </div>

        <div class="group">
          <center><%= f.submit "Обновить", class: "btn btn-default" %></center>
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <a ><%= render "devise/shared/links" %></a>
        </div>
    </div>
  </div>
</div>
<% end %>