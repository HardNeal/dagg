<% @users.each do |user| %>
<div class="container">
<div class="col-lg-12 col-sm-8">
  <div class="card hovercard">
    <div class="card-background">
      <img class="card-bkimg" alt="" src="/image/unnamed.png">
      <!-- http://lorempixel.com/850/280/people/9/ -->
    </div>
    <div class="useravatar">
      <img alt="" src="/image/ava.png">
    </div>
    <div class="card-info"> <span class="card-title"><b><%= current_user.email %></span>
<% end %>
    </div>
  </div>
  <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
        <div class="hidden-xs">All Trackers(<%= @users.size%>)</div>
      </button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        <div class="hidden-xs">Active</div>
      </button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <div class="hidden-xs">No active</div>
      </button>
    </div>
  </div>

  <div class="well">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <h3><%= render 'profile/trackerinfo' %></h3>
      </div>
      <div class="tab-pane fade in" id="tab2">
        <h3><%= render 'profile/trackeractive' %></h3>
      </div>
              <% else %>
      <div class="tab-pane fade in" id="tab3">
        <h3><%=  render 'profile/trackernoactive' %></h3>
      </div>
    </div>
  </div>
</div>
</div>
